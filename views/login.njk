{% set title = "Login" %}
{% from "components/form_controls.njk" import input %}
{% extends "layouts/base.njk" %}

{% block body %}
  {% if messages %}
    {% include "components/alert.njk" %}
  {% endif %}
  <main class="container-auto">
    <div class="mt-8 mx-auto max-w-md">
      <h1 class="font-bold text-2xl mb-6">{{ title }}</h1>
      <form class="space-y-6" action="/login" method="post">
        {{ input('text', 'username', required=true, show_required=false) }}
        {{ input('password', 'password', required=true, show_required=false) }}
        <button class="font-semibold text-white px-4 py-2 bg-blue-600 rounded-lg focus:ring" type="submit">Submit</button>
      </form>
    </div>
  </main>
{% endblock %}