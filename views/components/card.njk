{% macro card(title, class="", header_class="font-semibold text-white bg-blue-500", body_class="space-y-3", attrs={}) %}
  <div class="shadow-sm rounded-md bg-white {{ class }}" {{ attrs | stringify }}>
    <h2 class="p-3 rounded-t-md {{ header_class }}">{{ title }}</h2>
    <div class="p-3 {{ body_class }}">
      {{ caller() }}
    </div>
  </div>
{% endmacro %}