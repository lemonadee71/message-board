{% extends "layouts/base.njk" %}
{% from "components/buttons.njk" import get_btn, post_btn %}

{% block body %}
  {# Header #}
  <header class="flex flex-row justify-between content-center px-8 pt-6 pb-4 shadow-sm border border-solid border-b-gray-200">
    <h1 class="font-bold text-xl align-middle">
      <a href="/">Privvit</a>
    </h1>
    <div class="space-x-3">
      {% if current_user %}
        {{ post_btn('Logout', '/logout') }}
      {% else %}
        {{ get_btn('Sign Up', '/signup', class="btn border border-solid primary-r") }}
        {{ get_btn('Login', '/login') }}
      {% endif %}
    </div>
  </header>
  <section>
    {% if messages %}
      {% include "components/alert.njk" %}
    {% endif %}
  </section>
  <main class="h-[calc(100vh-68px)] overflow-scroll" x-data="{{ global_state }}">
    {% block main %}{% endblock %}
  </main>
{% endblock %}