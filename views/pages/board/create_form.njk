{% set title = "Create board" %}
{% from "components/form_controls.njk" import input %}
{% extends "layouts/base.njk" %}

{% block body %}
  {% if messages %}
    {% include "components/alert.njk" %}
  {% endif %}
  <main class="container-auto">
    <div class="mt-8 mx-auto max-w-md">
      <h1 class="font-bold text-2xl mb-6">Create New Board</h1>
      <form class="space-y-6" action="/b/_/create" method="post">
        {{ input('text', 'boardname', 'Board name', required=true) }}
        {{ input('text', 'display_name', "Display name") }}
        {{ input('text', 'passcode') }}
        {{ input('textarea', 'description') }}
        {{ input('checkbox', 'private', 'Private (posts will be hidden for non-members)', class='', attrs='checked') }}
        <button class="font-semibold text-white px-4 py-2 bg-blue-600 rounded-lg focus:ring" type="submit">Submit</button>
      </form>
    </div>
  </main>
{% endblock %}