{% extends "layouts/base.njk" %}
{% from "components/buttons.njk" import get_btn %}

{% block body %}
  <main class="container-auto max-w-md">
    <h1 class="font-semibold text-xl mb-4">{{ post.title }}</h1>
    <p class="font-medium">{{ post.body }}</p>
    <span>Created by: {{ post.author }}</span>
    <span>Posted: {{ post.date_created | formatdate }}</span>
    {{ get_btn('Go Back', '/b/' + post.board) }}
  </main>
{% endblock %}