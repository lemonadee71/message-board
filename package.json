{
  "name": "message-board",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production node ./bin/www",
    "start:dev": "NODE_ENV=development nodemon ./bin/www",
    "lint": "eslint . --ext .js --ignore-pattern node_modules/",
    "test": "jest",
    "test:watch": "jest --watch",
